{
  "manifest_version": 3,
  "name": "Phishing Link Checker",
  "version": "1.0",
  "description": "Scrapes links from pages and checks them with FastAPI backend.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
